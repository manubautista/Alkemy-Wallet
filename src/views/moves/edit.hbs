<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/moves/edit/{{move.ID}}" method="POST">
                        <div class="text-center"> 
                            Modificar Operaci√≥n 
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{move.concepto}}" class="form-control my-2" name="concepto" placeholder="Concepto" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{move.monto}}" name="monto" class="form-control my-2" placeholder="Monto en pesos">
                        </div>
                        <div class="form-group">
                            <input type="date" value="{{move.fecha}}" name="fecha" rows="2" class="form-control my-2" placeholder="fecha">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{move.tipo}}" name="tipo" rows="2" class="form-control my-2" hidden="true">
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary border-light w-100 my-2">
                                Modificar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>